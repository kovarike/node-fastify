{
  "compilerOptions": {
    "lib": ["ES2024", "DOM"],
    "module": "nodenext",
    "target": "ES2024",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "rootDir": "./src",
    "outDir": "bundle",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,



    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },
  "include": ["src/**/*", "bundle"],
  "exclude": ["node_modules", "dist", "bundle", "**/*.test.ts"]
}